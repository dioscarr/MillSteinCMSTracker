@model DAL.Models.Careers
@{
    Layout = "~/Areas/Admin/Views/Shared/_Secomdary_Layout.cshtml";
    ViewBag.activeCareer = "menu_top_border";
}

@using (Html.BeginForm(null, null, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.Id)
    @Html.HiddenFor(m => m.Created)
    @Html.HiddenFor(m => m.Modified)
    @Html.HiddenFor(m => m.isDeleted)




<div class="row firm_title">
    <div class="col-sm-9 col-xs-12 logo">
        <a href="~/home"><img src="~/Images/logo-all.png" /></a>
    </div>
    <div class="col-sm-3 col-xs-12 firm_sidebar">
        <ul class="list-inline firm_sidebar_ul">
            <li><a href="#">Careers</a></li>
        </ul>
    </div>
</div>


<div class="row">
    <div class="col-sm-9 col-xs-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                @for (var i = 0; i < 3; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#myCarousel" data-slide-to="@i"></li>
                        }


                    }



            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Images/slide1.jpg" alt="Chania">
                </div>

                @*<div class="item">
                        <img src="~/Images/slide2.jpg" alt="Chania">
                    </div>*@

                <div class="item">
                    <img src="~/Images/slide3.jpg" alt="Flower">
                </div>

                <div class="item">
                    <img src="~/Images/slide4.jpg" alt="Flower">
                </div>

            </div>

        </div>
        <div class="advisory_company inv_content_descriprion">
            <h4 class="investment_title">@Html.EditorFor(model => model.Header1, null, new {@class="form-control" })</h4>
            @Html.TextAreaFor(model => model.Content1, 10, 30, new { @class= "form-control ckeditor" })
            <h4 class="investment_title">@Html.EditorFor(model=>model.Header2, null, new {@Class="form-control"})</h4>
            @Html.TextAreaFor(model => model.Content2, 10, 30, new { @class = "form-control ckeditor" })
            <br />
            <button type="submit" class="btn btn-default ">Update Information</button>
            <br/>
            <br />
        </div>
       
    </div>
    <div class="col-xs-3 visible-lg visible-md">
        <ul class="left_bar_advisory ">
            To contact us about career opportunities:
            <li >@Html.EditorFor(model => model.Email, null, new { @class = "form-control" })</li>
            </ul>
</div>
      

    </div>

}
@section scripts
{
        <script src="https://cdn.jsdelivr.net/ckeditor/4.3.1/ckeditor.js" type="text/javascript"></script>
    
}